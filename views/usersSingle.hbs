<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      username: {{username}}
    </h3>
  </div>
  <div class="panel-body">
    password: {{password}}
  </div>
  <div class="panel-body">
    name: {{firstName}} {{lastName}}
  </div>
  <div class="panel-footer">
    age: {{age}}
  </div>
  <div class="panel-footer">
    sex: {{sex}}
  </div>
</div>
<form class="" action="/users/{{id}}?_method=DELETE" method="post">
  <a href="/users/{{id}}/edit" type="button" class="btn btn-default btn-warning" name="button"> Edit user</a>

  <button type="submit" class="btn btn-default btn-danger"> Delete user</button>
</form>
