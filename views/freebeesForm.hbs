<form class="form" action="/establishments/{{id}}/freebees/new" method="post">

  <div class="form-group">
    <label for="freebeesName">Name</label>
    <input type="text" class="form-control" id="freebeesName" placeholder="Enter a freebee name" name="name">
  </div>

  <div class="form-group">
    <label for="type">Type</label>
    <select name="type" class="from-control" id="type">
      <option value="">Select your type</option>
      <option value="Free">Free</option>
      <option value="BOGO">Buy One Get One Free</option>
      <option value="Free With Purchase">Free With Purchase</option>
    </select>
  </div>

  <div class="form-group">
    <label for="category">Category</label>
    <select name="category" class="from-control" id="category">
      <option value="">Select your category</option>
      <option value="Beer">Beer</option>
      <option value="Food">Food</option>
      <option value="Stuff">Stuff</option>
      <option value="Entertainment">Entertainment</option>
      <option value="Kids Eat Free">Kids Eat Free</option>
      <option value="Admission">Admission</option>
    </select>  </div>

  <div class="form-group">
    <label for="date">Date</label>
    <input type="date" class="form-control" id="date" placeholder="Enter a freebee date" name="date">
  </div>

  <div class="form-group">
    <label for="startTime">Start Time</label>
    <input type="time" class="form-control" id="startTime" placeholder="Enter a freebee start time" name="startTime">
  </div>
  <div class="form-group">
    <label for="stopTime">Stop Time</label>
    <input type="time" class="form-control" id="stopTime" placeholder="Enter a freebee stop time" name="stopTime">
  </div>

  <a type="button" class="btn btn-default btn-primary" href="/freebees">Go back to main page</a>
  <button type="submit" class="btn btn-default btn-success">Create</button>
</form>
